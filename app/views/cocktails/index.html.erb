<div class="background-image" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(' <%= image_path "whiskey2.jpg" %>');">
  <div class="container">
    <h1>List</h1>
    <div class="wrapper">
     <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-sm-3">
        <div class="card">
          <div class="card-block">
            <h3 class="card-title"> <%= cocktail.name %></h3>
            <%= link_to 'Recipe', cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="wrapper">
      <div class="btn btn-primary text-center">
         <%= link_to 'Add a cocktail', new_cocktail_path, id: :add_cocktail %>
     </div>
   </div>
 </div>
</div>
